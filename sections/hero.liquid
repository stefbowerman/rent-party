{% if section.blocks.size > 0 %}
<div data-section-id="{{ section.id }}" data-section-type="hero-section">
    {% comment %}
    {% case section.blocks.size %}
    {% when 1 %}
      {%- assign collection_item_width = 'one-half' -%}
    {% endcase %}
    {% endcomment %}
    
    <div class="strips">
      {% for block in section.blocks limit: section.blocks.size %}
        <div class="strip" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.url }}">{{ block.settings.title }}</a>
          <img src="{{ block.settings.bg_image | img_url: 'x600' }}" />
        </div>
      {% endfor %}
    </div>

    {% if section.settings.menu != blank and linklists[section.settings.menu].links.size > 0 %}
      <h3>MENU</h3>
      <ul class="inline-list">
      {% for link in linklists[section.settings.menu].links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
      </ul>
    {% endif %}
</div>
{% endif %}

{% schema %}
  {
    "name": "Hero",
    "class": "hero-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image"
      },
      {
        "type": "link_list",
        "id": "menu",
        "label": "Menu"
      }
    ],
    "blocks": [
      {
        "type": "strip",
        "name": "Strip",
        "limit": 5,
        "settings": [
          {
            "type": "url",
            "id": "url",
            "label": "URL"
          },
          {
            "type": "image_picker",
            "id": "bg_image",
            "label": "Background Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }
        ]
      }
    ]
  }
{% endschema %}