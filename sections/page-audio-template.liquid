<div class="grid">

  <div class="grid__item post-large--two-thirds push--post-large--one-sixth">

    <div class="section-header text-center">
      <h1 class="section-header__title">{{ page.title }}</h1>
    </div>

    <div class="rte">
      {{ page.content }}
    </div>

    {% for block in section.blocks %}
      <div class="audio-block" data-mix="{{ block.id }}" {{ block.shopify_attributes }}>
        <h4>{{ block.settings.title }}</h4>
        <p>{{ block.settings.description }}</p>
      </div>
    {% endfor %}

  </div>

</div>

{% schema %}
  {
    "name": "Audio page",
    "settings": [
    ],
    "blocks": [
      {
        "type": "audio",
        "name": "Audio",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ]
  }
{% endschema %}